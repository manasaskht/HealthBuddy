<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="vertical"
    tools:context=".HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorAccent"
            android:text="ABOUT_US"
            android:textSize="25dp"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MyBuddy is grocery remainder application which helps to store foods and notify expiry dates.It also supports pedometer and provides simple recepies"
android:textSize="20dp"

            />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="FAQ"
        android:textSize="25dp"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_selectorcolor"
        android:text="I'm not receiving notifications for food expiry"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check if you have allowed MyBuddy app to send you notifications in the settings of your phone"
        android:textSize="20dp"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_selectorcolor"
        android:text="When do i receive notification in a day"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Everyday morning at 10 am application notifies about food going to expire which we feel appropriate time of the day"
        android:textSize="20dp"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/button_selectorcolor"
        android:text="Can i edit the quantity for the already entered food item"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes we do have an option to edit and update itemname,expiry and quantity of food item. Explicitly there is a symbol for it which is placed at extreme left of every food item displayed"
        android:textSize="20dp"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/button_selectorcolor"
        android:text="Is MyBuddy available for MAC version"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, its coming soon. Please stay tuned with Appstore!!"
        android:textSize="20dp"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@color/button_selectorcolor"
                android:text="Is there any premium version available for MyBuddy application with advanced recipe"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are working on it and definitely our app promising recipes in near future"
                android:textSize="20dp"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />


        </LinearLayout>

</ScrollView>


</LinearLayout>
